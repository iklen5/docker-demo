@Library('propsFileReader') _

def props = loadProperties(env.WORKSPACE + "/misc/config.properties")

pipeline {
    agent any
    tools { nodejs "nodejs"}
    environment {
        commit_id = ''
    }
    stages {
        stage('Preparation') {
            steps {
                withEnv([
                  "REGISTRY=${props['REGISTRY']}",
                  "REGISTRY_CREDENTIAL=${props['REGISTRY_CREDENTIAL']}"
                ]) {
                    checkout scm
                    script {
                        sh 'printenv'
                        commit_id = sh(script: 'git rev-parse --short HEAD', returnStdout: true).trim()
                    }
                }
            }
        }
        stage('test') {
            agent {
                label 'nodejs'
            }
            steps {
                sh 'npm install --only=dev'
                sh 'npm test'
            }
        }
        stage('docker build/push') {
            steps {
                script {
                    docker.withRegistry(env.REGISTRY, env.REGISTRY_CREDENTIAL) {
                        def app = docker.build("kubeiklen/docker-nodejs-demo:${commit_id}", '.')
                        app.push()
                    }
                }
            }
        }
    }
}
