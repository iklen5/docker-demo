@Library('propsFileReader') _

pipeline {
    agent any
    tools {
        nodejs "nodejs"
    }
    environment {
        ENV_VARS = ''
    }
    stages {
        stage('test') {
            agent {
                label 'nodejs'
            }
            steps {
                sh 'npm install --only=dev'
                sh 'npm test'
                script {
                     readPropertiesFileAndSetEnvVars("${WORKSPACE}/misc/config.properties")
                     ENV_VARS = readPropertiesFile("${WORKSPACE}/misc/config.properties")
                }
                sh 'printenv'
            }
        }
        stage('docker build/push') {
            environment {
                commit_id = sh(script: 'git rev-parse --short HEAD', returnStdout: true).trim()
                TIMEOUT_UNIT = "MINUTES"
            }
            options {
                timeout(time: 1, unit: "${env.TIMEOUT_UNIT}")
            }
            steps {
                script {
                    docker.withRegistry(ENV_VARS['REGISTRY'], ENV_VARS['REGISTRY_CREDENTIAL']) {
                        def app = docker.build("kubeiklen/docker-nodejs-demo:${env.commit_id}", '.')
                        app.push()
                    }
                }
            }
        }
    }
}